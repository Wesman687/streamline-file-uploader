# Upload Server Environment Template
# Copy this to production.env and fill in your actual values

# Server Configuration
PORT=5070
BIND_HOST=127.0.0.1
UPLOAD_ROOT=/data/uploads
PUBLIC_BASE_URL=https://your-domain.com

# Authentication - REPLACE WITH YOUR SECRETS
AUTH_JWT_ALG=RS256
AUTH_JWT_ISSUER=https://your-domain.com
AUTH_JWT_AUDIENCE=your-app-name
JWT_PRIVATE_KEY_PATH=/etc/stream-line/keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/etc/stream-line/keys/jwt_public.pem
JWKS_KID=your-key-id-1
AUTH_SERVICE_TOKEN=your-service-token-here
UPLOAD_SIGNING_KEY=your-signing-key-here

# Default TTL for signed URLs (seconds)
SIGNED_URL_TTL_DEFAULT=3600

# Upload limits and quotas
MAX_BODY_MB=5120
PER_USER_QUOTA_GB=500
